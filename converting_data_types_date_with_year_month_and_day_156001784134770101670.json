      "display_name": "Converting Data Types - Date with Year, Month and Day",
      "code": [
         "import pandas as pd",
         "dataframe = pd.DataFrame({'Country': ['Afghanistan','Afghanistan','Brazil','Brazil','China', 'China'],",
         "                          'Year': [1999, 2000, 1999, 2000, 1999, 2000],",
         "                          'Cases': [745, 2666, 37737, 80488, 212258, 213766],",
         "                          'Population': [19987071,  20595360,  172006362,  174504898,  1272915272,  1280428583],",
         "                          'Month': [1, 1, 1, 1, 1, 1],",
         "                          'Day': [1, 1, 1, 1, 1, 1]})",
         "",
         "display(dataframe)",
         "",
         "dataframe.assign(",
         "    Date = lambda dataset : pd.to_datetime(dataset.filter([\"Year\", \"Month\", \"Day\"]))",
         ")"
      ],
      "language": "Python"
   },
