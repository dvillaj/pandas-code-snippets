      "code": [
         "import pandas as pd",
         "",
         "text_file = open(\"data.csv\", \"w\")",
         "text_file.write(",
         "\"\"\"",
         "Country\tYear\tCases\tPopulation",
         "Afghanistan \t1999 \tA \t19987071",
         "Afghanistan \t2000 \t2666 \t20595360",
         "Brazil \t1999 \t37737 \t172006362",
         "Brazil \t2000 \t80488 \t174504898",
         "China \t1999 \t212258 \t1272915272",
         "China \t2000 \t213766 \t1280428583",
         "\"\"\")",
         "",
         "text_file.close()",
         "dataframe = pd.read_csv(\"data.csv\", sep = \"\\t\")",
         "",
         "display(dataframe)",
         "dataframe.info()",
         "",
         "dataframe = dataframe.assign(",
         "    Cases = lambda dataset: pd.to_numeric(dataset.Cases, errors = \"coerce\").fillna(0)",
         ")",
         "",
         "display(dataframe)",
         "dataframe.info()"
      ],
      "language": "Python"
   },
   "schema_name": "code-snippet"
}