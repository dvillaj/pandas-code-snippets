      "code": [
         "import pandas as pd",
         "",
         "text_file = open(\"data.csv\", \"w\")",
         "text_file.write(",
         "\"\"\"",
         "Name,Sex,Cities",
         "Sharon,F,Austin|New York|Miami",
         "Kevin,M,Miami|Texas|New York",
         "Michael,M,New York",
         "\"\"\")",
         "text_file.close()",
         "",
         "dataframe = pd.read_csv(\"data.csv\")",
         "",
         "display(dataframe)",
         "",
         "def separate_list(df, column_name, separator):",
         "    df = pd.concat(",
         "         [df, ",
         "          df[column_name].str.get_dummies(separator)",
         "         ], axis = 'columns')",
         "    return df",
         "",
         "dataframe.pipe(separate_list, 'Cities', '|')"
      ],
      "language": "Python"
   },
