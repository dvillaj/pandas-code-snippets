      "code": [
         "import pandas as pd",
         "",
         "dataframe = pd.DataFrame({'country': ['Afghanistan ', 'Afghanistan ', 'Brazil ', 'Brazil ', 'China ', 'China '],",
         "                          'year': [1999, 2000, 1999, 2000, 1999, 2000],",
         "                          'cases': [745.0, 2666.0, 37737.0, 80488.0, 212258.0, 213766.0],",
         "                          'population': ['19,987,071',  '20,595,360',  '172,006,362',  '174,504,898', '1,272,915,272', '1,280,428,583']})",
         "",
         "display(dataframe)",
         "",
         "def convert_function(val):",
         "    \"\"\"",
         "    Convert the string number value to a int",
         "     - Remove commas",
         "     - Convert to int type",
         "    \"\"\"",
         "    new_val = val.replace(',','')",
         "    return int(new_val)",
         "",
         "dataframe.assign(",
         "    Cases = lambda dataset: dataset.Cases.map(lambda val : int(val)),",
         "    Population = lambda dataset: dataset.Population.map(convert_function)",
         ")"
      ],
      "language": "Python"
   },
